@page "/fibonacci"
@using System.Numerics
@rendermode InteractiveServer

<PageTitle>Fibonacci</PageTitle>

<h3>Fibonacci Challenge</h3>

<div class="row my-3">
    <div class="col-md-2">
        <label>Run numbers up to:</label>
        <input type="number" class="form-control" @bind="limit" />
    </div>

    <div class="col-md-2">
        <label>Offset 1 Value:</label>
        <input type="number" class="form-control" @bind="offset1" />
    </div>
    <div class="col-md-2">
        <label>Offset 2 Value:</label>
        <input type="number" class="form-control" @bind="offset2" />
    </div>

    <div class="col-md-2 d-flex align-items-end">
        <button class="btn btn-primary btn-align-end" @onclick="RunLoop">Run</button>
    </div>
</div>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
@if (!string.IsNullOrEmpty(runMessage))
{
    <div class="alert alert-success">@runMessage</div>
}

<div class="results-container" style="height: 500px; overflow-y: auto; border: 1px solid #ccc;">
    <Virtualize Items="@Output" Context="item" ItemSize="32">
        <div class="result-item" style="height: 30px; line-height: 30px; white-space: nowrap; overflow-x: auto;">
            F(@item.Index) = @item.Value.ToString("N0")
        </div>
    </Virtualize>
</div>

@code {
    // Configuration
    private const long MaxAllowedBytes = 25L * 1024 * 1024 * 1024;  // 25 GB

    private string? errorMessage;
    private string? runMessage;
    private long limit { get; set; } = 6;
    private long offset1 { get; set; } = 1;
    private long offset2 { get; set; } = 2;
    private List<(int Index, BigInteger Value)> Output = new();

    #region Memory Estimation
    // Uses Newton-Raphson Iteration to find the root. - Thank you, Khin!!!
    private static double CalculateGrowthRate(long y, long z)
    {
        if (y == z)
            return Math.Pow(2, 1.0 / y);

        long m = Math.Max(y, z);
        long a = m - y;
        long b = m - z;

        // Newton-Raphson Iteration to solve: x^m - x^a - x^b = 0
        double nri = 1.5;

        for (int i = 0; i < 50; i++)
        {
            double xm = Math.Pow(nri, m);
            double xa = Math.Pow(nri, a);
            double xb = Math.Pow(nri, b);

            double f = xm - xa - xb;
            double fPrime = m * Math.Pow(nri, m - 1)
                          - a * Math.Pow(nri, a - 1)
                          - b * Math.Pow(nri, b - 1);

            if (Math.Abs(fPrime) < 1e-15)
                break;

            double nextX = nri - f / fPrime;

            if (Math.Abs(nextX - nri) < 1e-12)
                break;

            nri = nextX;
        }

        return nri;
    }

    // Estimate memory requirement
    private static long EstimateMemoryBytes(long limit, long y, long z)
    {
        if (limit <= 0) return 0;

        double phi = CalculateGrowthRate(y, z);
        double log10Phi = Math.Log10(phi);

        const double overheadMultiplier = 1.3;
        const double bytesPerDigit = 0.415;

        BigInteger n = new BigInteger(limit);
        BigInteger sumOfIndices = (n * (n + 1)) / 2;

        double coefficient = bytesPerDigit * log10Phi * overheadMultiplier;

        double totalEstimatedBytes = coefficient * (double)sumOfIndices;

        return totalEstimatedBytes > (double)long.MaxValue 
            ? long.MaxValue 
            : (long)totalEstimatedBytes;
    }

    // Calculate the maximum Limit for a given memory budget
    private static long CalculateMaxLimit(long maxBytes, long y, long z)
    {
        if (maxBytes <= 0) return 0;

        double phi = CalculateGrowthRate(y, z);
        double log10Phi = Math.Log10(phi);

        const double overheadMultiplier = 1.3;
        const double bytesPerDigit = 0.415;

        double coefficient = bytesPerDigit * log10Phi * overheadMultiplier / 2.0;

        double maxLimit = Math.Sqrt(maxBytes / coefficient);

        return (long)Math.Floor(maxLimit);
    }

    // Returns human-readable memory string
    private static string FormatBytes(long bytes)
    {
        if (bytes < 1024) return $"{bytes} B";
        if (bytes < 1024 * 1024) return $"{bytes / 1024.0:F1} KB";
        if (bytes < 1024 * 1024 * 1024) return $"{bytes / (1024.0 * 1024):F1} MB";
        return $"{bytes / (1024.0 * 1024 * 1024):F2} GB";
    }
    #endregion

    private async Task RunLoop()
    {
        errorMessage = null;
        runMessage = null;
        Output.Clear();

        if (limit <= 0 || limit > int.MaxValue)
        {
            errorMessage = $"Run number must be > 0 and ≤ {int.MaxValue:N0}.";
            return;
        }

        if (offset1 <= 0 || offset1 > int.MaxValue)
        {
            errorMessage = $"Offset 1 value must be > 0 and ≤ {int.MaxValue:N0}.";
            return;
        }

        if (offset2 <= 0 || offset2 > int.MaxValue)
        {
            errorMessage = $"Offset 2 value must be > 0 and ≤ {int.MaxValue:N0}.";
            return;
        }

        // Safe to cast now - we've validated the ranges
        int safeLimit = (int)limit;
        int safeOffset1 = (int)offset1;
        int safeOffset2 = (int)offset2;

        // Check memory constraints
        long maxLimit = CalculateMaxLimit(MaxAllowedBytes, offset1, offset2);
        long estimatedBytes = EstimateMemoryBytes(limit, offset1, offset2);

        if (limit > maxLimit)
        {
            errorMessage = $"Run of {limit:N0} would require ~{FormatBytes(estimatedBytes)}. " +
                        $"With Offset 1={offset1} and Offset 2={offset2}, maximum allowed limit is {maxLimit:N0} " +
                        $"(~{FormatBytes(MaxAllowedBytes)} budget).";
            return;
        }

        runMessage = "Computing sequence...";
        StateHasChanged();
        await Task.Delay(1);

        // Use safe int values for list operations
        Output.Capacity = safeLimit + 1;

        for (int i = 0; i <= safeLimit; i++)
        {
            if (i < safeOffset1 || i < safeOffset2)
                Output.Add((i, BigInteger.One));
            else
                Output.Add((i, Output[i - safeOffset1].Value + Output[i - safeOffset2].Value));
        }

        runMessage = $"Computed {limit:N0} terms of F(x) = F(x-{offset1}) + F(x-{offset2}). " +
                    $"Memory used: ~{FormatBytes(estimatedBytes)}.";
    }
}
